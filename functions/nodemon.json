{
  "verbose": true,
  "restartable": "rs",
  "legacyWatch": true,
  "ignore": [
    ".git",
    "node_modules",
    "build",
    "dev"
  ],
  "watch": [
    "src/**/*.ts"
  ],
  "execMap": {
    "ts": "node -r ts-node/register --nolazy --inspect=0.0.0.0:9229"
  },
  "env": {
    "API_PORT": 81,
    "TASKS_PORT": 3000,
    "WEBHOOKS_PORT": 4000
  },
  "ext": "ts,js"
}